%h1=_"<%= plural_name %>"

%table.autolink
  %thead
    %tr
<% for attribute in attributes -%>
      %th.<%= attribute.name %>=_"<%= attribute.column.human_name %>"
<% end -%>
      %th=_"Actions"
  %tbody
    - current_objects.each do |<%= singular_name %>|
      %tr
      <% for attribute in attributes -%>
        %td.<%= attribute.name %>= h <%= singular_name %>.<%= attribute.name %>
      <% end -%>
        %td
          = link_to _('Show'), object_path(<%= singular_name %>), :class => "autolink"
          |
          = link_to _('Edit'), edit_object_path(<%= singular_name %>)
          |
          = link_to _('Destroy'), object_path(<%= singular_name %>), :confirm => _('Really destroy <%= singular_name %>?'), :method => :delete


= link_to _('New <%= singular_name %>'), new_object_path
